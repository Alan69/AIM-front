# API URLS
REACT_MAIN_DOMEN=http://localhost:8000
REACT_APP_API_URL=http://localhost:8000/api/
REACT_APP_GRAPHQL_URL=http://localhost:8000/graphql/

# Media paths and URLs
REACT_APP_MEDIA_URL=http://localhost:8000/media
REACT_APP_UPLOADS_PATH=/media

# Alternative URLs for handling fallbacks
REACT_APP_ALT_API_URL=http://localhost:8000
REACT_APP_ALT_MEDIA_URL=http://localhost:8000/media

# User-specific media paths
REACT_APP_USER_MEDIA_PATH=/media/user_{userId}/posts_img
REACT_APP_PREVIOUS_POSTS_MEDIA_PATH=/media/previous_posts_media

# Authentication
REACT_APP_AUTH_COOKIE_NAME=token
REACT_APP_USER_COOKIE_NAME=user

# Development settings
NODE_ENV=development
PORT=3000
BROWSER=none

# CORS settings
REACT_APP_CORS_ALLOW_ORIGIN=http://localhost:3000

# Debug settings (disable detailed logging in production)
REACT_APP_DEBUG=false
REACT_APP_TEMPLATE_DEBUG=false